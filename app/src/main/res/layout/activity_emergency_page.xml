<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryList"
    android:background="@drawable/background_aawareness"
    >

    <Button
        android:id="@+id/aaware_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "aaware"
        android:fontFamily="@font/megrim"
        android:textSize="30sp"
        android:gravity= "right"
        android:textColor="#FFDC00"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/parent_name"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:text="Parent's Name:"
        android:textSize="30dp" />


    <EditText
        android:id="@+id/parent_name_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textColor="#FFDC00"
        android:textSize="20dp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/parent_number"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:text="Parent's Number:"
        android:textColor="#FFDC00"
        android:textSize="30dp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/parent_number_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:textSize="20dp"


        />

    <TextView
        android:id="@+id/doctors_Name"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:text="Doctor's Name:"
        android:textSize="30dp" />



    <EditText
        android:id="@+id/doctors_name_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:textSize="20dp"


        />

    <TextView
        android:id="@+id/doctors_number"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:text="Doctor's Number:"
        android:textSize="30dp" />



    <EditText
        android:id="@+id/doctors_number_data"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:textSize="20dp"


        />

    <Button
    android:id="@+id/save_emergency"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:layout_marginTop="269dp"
    android:layout_marginEnd="33dp"
    android:layout_marginRight="223dp"
    android:background="@drawable/roundedbutton"
    android:fontFamily="@font/megrim"
    android:gravity="bottom"
    android:text="Save"
    android:textSize="30dp"
    android:textAlignment="center"
        />


</RelativeLayout>