<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryList"
    android:background="@drawable/background_aawareness"
    >

    <Button
        android:id="@+id/aaware_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "aaware"
        android:fontFamily="@font/megrim"
        android:textSize="30sp"
        android:gravity= "right"
        android:textColor="#FFDC00"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/ParentName"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:text="Parent's Name:"

        android:textSize="30dp" />




    <EditText
        android:id="@+id/ParentNameData"
        android:layout_width="wrap_content"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"


        android:textSize="30dp"


        />

    <TextView
        android:id="@+id/Doctor_Name"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"

        android:gravity="left"
        android:text="Doctor's Name:"
        android:textColor="#FFDC00"
        android:textSize="30dp"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/DoctorNameData"
        android:layout_width="wrap_content"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"


        android:textSize="30dp"


        />

    <TextView
        android:id="@+id/DoctorsNumber"
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"
        android:text="Doctor's Number:"

        android:textSize="30dp" />



    <EditText
        android:id="@+id/DoctorsNumberData"
        android:layout_width="wrap_content"
        android:layout_height="617dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="223dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/megrim"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#FFDC00"


        android:textSize="30dp"


        />




</RelativeLayout>