<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPanel"
    android:background="@drawable/background_aawareness">
    <EditText
        android:id="@+id/name_create"
        android:layout_width="283dp"
        android:layout_height="75dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:textColorHint="#FFDC00"
        android:textColor="#FFDC00"
        android:fontFamily="@font/megrim"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter a name"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/email_create"
        android:layout_width="283dp"
        android:layout_height="75dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:textColorHint="#FFDC00"
        android:textColor="#FFDC00"
        android:fontFamily="@font/megrim"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter a email"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/username_create"
        android:layout_width="283dp"
        android:layout_height="75dp"
        android:layout_marginTop="350dp"
        android:ems="10"
        android:textColorHint="#FFDC00"
        android:textColor="#FFDC00"
        android:fontFamily="@font/megrim"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Create a Username"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/password_create"
        android:layout_width="283dp"
        android:layout_height="75dp"
        android:layout_marginTop="400dp"
        android:ems="10"
        android:textColorHint="#FFDC00"
        android:fontFamily="@font/megrim"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:textColor="#FFDC00"
        android:inputType="textPassword"
        android:hint="Create a Password"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="487dp"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="323dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/megrim"
        android:gravity="center"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="30dp" />
</RelativeLayout>